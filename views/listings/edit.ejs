<% layout('/layouts/boilerplate.ejs') -%>
<body>
   
    <form method="post" action="/listings/<%=listing._id%>?_method=PUT">
        <div class="container">
            <div class="row">
                <h3 class="mt-3">Edit Your Listing</h3>
                <div class="col-12 col-md-10">
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Title</label>
                        <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                      </div>
            
                      <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Description</label>
                        <textarea name="listing[description]"  cols="10" rows="5" id="" class="form-control"><%=listing.description%></textarea>
                      </div>
                      <div class="row">
                        <div class="mb-3 col-12 col-md-4">
                            <label for="exampleInputPassword1" class="form-label">Price</label>
                            <input type="text" name="listing[price]" value="<%=listing.price%>" class="form-control" id="exampleInputPassword1">
                          </div>
                          <div class="mb-3 col-12 col-md-8">
                            <label for="exampleInputPassword1" class="form-label">Location</label>
                            <input type="text" name="listing[location]" value="<%=listing.location%>" class="form-control" id="exampleInputPassword1">
                          </div>
                      </div>
                     
                      <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Country</label>
                        <input type="text" name="listing[country]" value="<%=listing.country%>" class="form-control" id="exampleInputPassword1">
                      </div>
                      <button type="submit" class="btn btn-primary">Edit</button>    
                </div>
            </div>
        </div>
        
      </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" ></script>
</body>
