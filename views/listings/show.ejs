<% layout('/layouts/boilerplate.ejs') -%>

<body>
    <h3 class="text-center">Listing Details</h3>

    <div class="container">
      <div class="row">
        <div class="col-12 col-md-10 offset-md-2 mt-5">
          <div class="card" style="width:70%">
            <img class="card-img-top" src="<%=listing.image%>" alt="Card image cap" style="height:22rem">
            <div class="card-body">
              <h4 class="mt-3"><%=listing.title %></h4>
              <p class="card-text"> <%=listing.description %> </p>
              <p class="card-text">&#8377; <%=listing.price.toLocaleString("en-IN") %></p>
              <p class="card-text"><%=listing.location %></p>
              <p class="card-text"><%=listing.country %></p>
             
            </div>
          </div>
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-success">Edit </a>
          <form action="/listings/<%=listing._id%>?_method=DELETE" method="post">
            <button class="mt-2 btn btn-danger">Delete</button>
          </form>
        </div>
       
      </div>
    </div>
    <ul>
    
     
   
</body>
